<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Github Peeker</title>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(135deg, #f0f0f0, #e6e6e6);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            transition: background-color 0.3s, color 0.3s;
        }
        body.dark-mode {
            background: linear-gradient(135deg, #1e1e1e, #2e2e2e);
            color: #e0e0e0;
        }
        .container {
            text-align: center;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 100%;
            max-width: 480px;
            transition: background-color 0.3s, color 0.3s;
        }
        .container.dark-mode {
            background: #2a2a2a;
            color: #e0e0e0;
        }
        h1 {
            color: #333;
            margin-bottom: 10px;
            font-size: 2rem;
            font-weight: 700;
        }
        h1.dark-mode {
            color: #e0e0e0;
        }
        p {
            color: #666;
            margin-bottom: 20px;
            font-size: 1.1rem;
            font-weight: 400;
        }
        p.dark-mode {
            color: #d0d0d0;
        }
        form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        label {
            font-size: 1.2rem;
            color: #444;
            margin-bottom: 10px;
            align-self: flex-start;
            margin-left: 10px;
            font-weight: 500;
        }
        label.dark-mode {
            color: #e0e0e0;
        }
        input[type="text"] {
            width: 100%;
            padding: 12px;
            font-size: 1rem;
            border: 2px solid #ddd;
            border-radius: 8px;
            box-sizing: border-box;
            margin-bottom: 20px;
            transition: border-color 0.3s, box-shadow 0.3s;
        }
        input[type="text"]:focus {
            border-color: #4078c0;
            box-shadow: 0 0 8px rgba(64, 120, 192, 0.3);
            outline: none;
        }
        input[type="text"].dark-mode {
            background: #333;
            color: #e0e0e0;
            border-color: #444;
        }
        input[type="submit"] {
            background-color: #4078c0;
            color: #ffffff;
            border: none;
            padding: 12px 20px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
        }
        input[type="submit"]:hover {
            background-color: #005a9c;
            transform: translateY(-2px);
        }
        input[type="submit"]:active {
            background-color: #004080;
            transform: translateY(0);
        }
        input[type="submit"].dark-mode {
            background-color: #606060;
            color: #ffffff;
        }
        input[type="submit"].dark-mode:hover {
            background-color: #505050;
        }
        input[type="submit"].dark-mode:active {
            background-color: #404040;
        }
        .toggle-button {
            position: fixed;
            top: 20px;
            right: 20px;
            background: #0073b1;
            color: #fff;
            border: none;
            padding: 10px 15px;
            font-size: 1rem;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .toggle-button.dark-mode {
            background: #444;
        }
    </style>
</head>
<body>
    <button class="toggle-button">Toggle Dark Mode</button>
    <div class="container">
        <h1>Github Peeker</h1>
        <p>Tools for peeking Github profiles</p>
        <form action="/proxy" method="get">
            <label for="url">Github username:</label>
            <input type="text" id="url" name="url" placeholder="Enter Github username eg: 53buahapel" required>
            <input type="submit" value="Submit">
        </form>
    </div>
    <script>
        const toggleButton = document.querySelector('.toggle-button');
        const body = document.body;
        const container = document.querySelector('.container');
        const darkModeKey = 'darkMode';

        function applyDarkMode() {
            const isDarkMode = localStorage.getItem(darkModeKey) === 'true';
            body.classList.toggle('dark-mode', isDarkMode);
            container.classList.toggle('dark-mode', isDarkMode);
            toggleButton.classList.toggle('dark-mode', isDarkMode);
            document.querySelectorAll('h1, p, label').forEach(el => el.classList.toggle('dark-mode', isDarkMode));
            document.querySelectorAll('input[type="text"]').forEach(el => el.classList.toggle('dark-mode', isDarkMode));
            document.querySelectorAll('input[type="submit"]').forEach(el => el.classList.toggle('dark-mode', isDarkMode));
        }

        toggleButton.addEventListener('click', () => {
            const isDarkMode = !body.classList.contains('dark-mode');
            localStorage.setItem(darkModeKey, isDarkMode);
            applyDarkMode();
        });

        applyDarkMode();
    </script>
</body>
</html>
